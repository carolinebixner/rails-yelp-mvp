<h1> Here are all the restaurants!</h1>

<div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Category</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td> <%= restaurant.name %></td>
      <td> <%= restaurant.address %></td>
      <td> <%= restaurant.category %></td>
      <td class="btn btn-outline-dark"> <%= link_to 'Show', restaurant %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<div class="btn btn-dark">
<%= link_to 'Create a new restaurant', new_restaurant_path %>
</div>

